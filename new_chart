pivot_df = df_above2.pivot_table(
    index="variation", columns="mbr_ror_code", values="cagr", aggfunc="mean"
)

plt.figure(figsize=(12,6))
sns.heatmap(pivot_df, annot=True, fmt=".2f", cmap="coolwarm")
plt.title("Mean CAGR by Variation and mbr_ror_code (Above 2%)")
plt.ylabel("Variation (v1â€“v4)")
plt.xlabel("mbr_ror_code")
plt.show()